{
  "application": {
    "name": "SerialDebugger",
    "version": "1.0.0",
    "language": "zh_CN"
  },
  "serial": {
    "defaultBaudRate": 115200,
    "defaultDataBits": 8,
    "defaultStopBits": 1,
    "defaultParity": "None",
    "autoConnect": false,
    "lastPort": ""
  },
  "display": {
    "mode": "ASCII",
    "encoding": "UTF-8",
    "showTimestamp": true,
    "autoScroll": true,
    "maxLines": 10000
  },
  "send": {
    "mode": "ASCII",
    "encoding": "UTF-8",
    "timerInterval": 1000,
    "timerEnabled": false,
    "saveHistory": true,
    "maxHistoryCount": 20
  },
  "log": {
    "autoSave": false,
    "savePath": "./logs",
    "includeTimestamp": true,
    "splitBySize": false,
    "maxFileSize": 10485760
  },
  "ui": {
    "theme": "dark",
    "fontSize": 9,
    "windowGeometry": {
      "width": 1280,
      "height": 800
    }
  },
  "chart": {
    "enabled": false,
    "channelCount": 2,
    "timeWindow": 10.0,
    "refreshRate": 60
  }
}
